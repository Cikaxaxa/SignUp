<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:paddingTop="100dp"
            >

            <FrameLayout
                android:id="@+id/btnprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:onClick="clickNew"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btntopo1"
                    android:layout_width="355dp"
                    android:layout_height="148dp"
                    android:background="@drawable/topography"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btntopo2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="TOPOGRAPHY"
                    android:layout_gravity="center"
                    />

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/btnpelan1"
                    android:layout_width="355dp"
                    android:layout_height="148dp"
                    android:background="@drawable/pelancongan"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btnpelan2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="PELANCONGAN"
                    android:layout_gravity="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/btnakti1"
                    android:layout_width="355dp"
                    android:layout_height="148dp"
                    android:background="@drawable/aktiviti"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btnakti2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="AKTIVITI"
                    android:layout_gravity="center"
                    />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/jupem"

                />

            <TextView
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:inputType="text"
                android:text="Jabatan Ukur dan Pemetaan Malaysia"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>